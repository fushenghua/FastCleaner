<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/Main.MyActionBar</item>
        <item name="actionBarStyle">@style/Main.MyActionBar</item>


        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="Normal_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="background">@color/bg_card</item>-->
        <!--<item name="android:background">@color/bg_card</item>-->
        <item name="actionBarStyle">@style/Normal_MyActionBar</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--&lt;!&ndash; support library compatibility &ndash;&gt;-->
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/Main.BarTitleText</item>
    </style>

    <style name="Main.MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/Main.BarTitleText</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--&lt;!&ndash; support library compatibility &ndash;&gt;-->
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/Main.BarTitleText</item>
    </style>

    <style name="Normal_MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/bg_card</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--&lt;!&ndash; support library compatibility &ndash;&gt;-->
        <item name="background">@color/bg_card</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bg_card</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Main.BarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bg_card</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="AppTheme.Launcher">
        <!--关闭启动窗口-->
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/main_color</item>//按钮默认颜色
    </style>
</resources>
