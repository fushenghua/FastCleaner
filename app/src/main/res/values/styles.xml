<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

        <!--<item name="colorPrimaryDark">@color/bg_card</item>-->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="Normal_AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/bg_card</item>
        <item name="android:background">@color/bg_card</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
        <item name="android:windowContentOverlay">@null</item>
        <!--&lt;!&ndash; support library compatibility &ndash;&gt;-->
        <item name="background">@color/white</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/bg_card</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
